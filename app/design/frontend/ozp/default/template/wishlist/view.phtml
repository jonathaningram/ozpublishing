                    <?php if ($this->isSaleable()): ?>
                        <button type="button" title="<?php echo $this->__('Add all to cart') ?>" onclick="addAllWItemsToCart()" class="btn btn-large"><?php echo $this->__('Add all to cart') ?></button>
