                                <td>
                                    <span class="nobr"><?php echo $this->getFormatedDate($item->getAddedAt()) ?></span>
                                </td>
                                <td>
                                    <?php if ($item->canHaveQty() && $isVisibleProduct): ?>
                                        <p><input type="text" class="qty" name="qty[<?php echo $item->getId() ?>]" value="<?php echo $this->getAddToCartQty($item) * 1 ?>" /></p>
                                    <?php endif; ?>
                                    <?php if ($product->isSaleable()): ?>
                                        <?php if ($isVisibleProduct): ?>
                                            <button type="button" title="<?php echo $this->__('Add to cart') ?>" onclick="addWItemToCart(<?php echo $item->getId(); ?>)" class="btn"><?php echo $this->__('Add to cart') ?></button>
