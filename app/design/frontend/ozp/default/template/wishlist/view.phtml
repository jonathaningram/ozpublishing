<?php if ($this->helper('wishlist')->isAllow()) : ?>
    <?php if ($this->helper('wishlist')->isRssAllow() && $this->hasWishlistItems()): ?>
        <a href="<?php echo $this->helper('wishlist')->getRssUrl(); ?>" class="btn"><i class="fa-icon-rss"></i> <?php echo $this->__('RSS feed') ?></a>
